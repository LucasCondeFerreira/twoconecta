  <script>

    // Função que adiciona e remove as classes nos elementos do botão e do menu
    function toggleSwitchMenu() {
      const menuButton = document.getElementById("menu")
      menuButton.classList.toggle("ativo")

      const opcoesDiv = document.querySelector(".opcoes")
      opcoesDiv.classList.toggle("mostrar")
    }

    // Função que observa o evento de clique no botão
    document.getElementById("menu").addEventListener("click", toggleSwitchMenu)
  </script>

  <script>
    // Script para observar o clique do botão
    document.querySelectorAll(".botao-contato").forEach(function (botao) {
      botao.addEventListener("click", function () {
        const id = this.id;
        const servico = document.querySelector(`.titulo-servico-${id}`).innerHTML;
        message(servico);
      })
    })

    // Script da pré-mensagem no WhatsApp
    function message(servico) {
      const text =
        `https://api.whatsapp.com/send?phone=5551990001953&text=` +
        `Olá, estou entrando em contato referente ao serviço de ${servico}\n\n` +
        `Vi no seu site e achei o ideal para a minha ideia\n\n` +
        `(Adicionar aqui detalhes ou dúvidas)\n\n`;

      window.location.href = encodeURI(text);
    }
  </script>



